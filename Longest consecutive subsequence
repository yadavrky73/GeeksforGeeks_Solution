def findLongestConseqSubseq(a,n):
    a.sort()
    a.append(9999999999)
    p=1
    q=0
    for i in range(len(a)):
        if a[i+1]-a[i]<=1:
            p+=1
        else:
            if p>q:
                q=p
            p=1
    return q

t = int(input())
for tt in range(t):
    n=int(input())
    a = list(map(int, input().strip().split()))
    print(findLongestConseqSubseq(a,n))

